{
    "name": "Magix Helper",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Magix Helper",
    "omnibox": {
        "keyword": "yeah"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "Magix可视化工具"
    },

    "background": {
        "scripts": ["js/content.js"],
        "persistent": false
    },

    "permissions": [
        "http://thx.github.io/*",
        "https://thx.github.io/*",
        "tabs",
        "activeTab"
    ]
}
