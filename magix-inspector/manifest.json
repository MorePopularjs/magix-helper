{
    "name": "Magix Helper",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Magix Helper",
    "icons": {
        "16": "images/magix16.png",
        "48": "images/magix48.png",
        "128": "images/magix128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/magix19.png",
            "38": "images/magix38.png"
        },
        "default_title": "Magix可视化工具"
    },

    "background": {
        "scripts": ["js/content.js"],
        "persistent": false
    },

    "permissions": [
        "http://thx.github.io/*",
        "https://thx.github.io/*",
        "tabs",
        "activeTab"
    ]
}
